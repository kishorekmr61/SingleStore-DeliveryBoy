<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_main"
        android:background="@color/Red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height200">

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/manimage"
                android:layout_width="150dp"
                android:layout_height="150dp" />



            <TextView
                android:textSize="@dimen/text_16"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="RS 500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin10"
        android:layout_below="@id/relative_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <LinearLayout
           android:weightSum="3"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_weight="1"
               android:layout_gravity="center"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:gravity="center"
                   android:text="Completed orders"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"/>

               <TextView
                   android:gravity="center"
                   android:layout_marginTop="@dimen/margin2"
                   android:text="10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"/>
           </LinearLayout>

           <LinearLayout
               android:layout_gravity="center"
               android:layout_weight="1"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:gravity="center"
                   android:text="Pending orders"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"/>

               <TextView
                   android:gravity="center"
                   android:layout_marginTop="@dimen/margin2"
                   android:text="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"/>
           </LinearLayout>


           <LinearLayout
               android:layout_gravity="center"
               android:layout_weight="1"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:text="Joined"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"/>

               <TextView
                   android:gravity="center"
                   android:layout_marginTop="@dimen/margin2"
                   android:text="05-01-2019"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"/>
           </LinearLayout>

       </LinearLayout>

<TextView
    android:layout_marginTop="@dimen/margin5"
    android:background="@color/lightgrey"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:textSize="16sp"
    android:text="Completed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/margin5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:background="@drawable/deliverymainicon"
                    android:layout_width="@dimen/width150"
                    android:layout_height="@dimen/width150" />

          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="@dimen/height150">

              <LinearLayout
                  android:weightSum="2"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="150dp">

                  <LinearLayout
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

                      <TextView
                          android:text="Reward"
                          android:gravity="center"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"/>

                      <TextView
                          android:gravity="center"
                          android:layout_marginTop="@dimen/margin2"
                          android:text="Rs20"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"/>


                  </LinearLayout>

                  <LinearLayout
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

                      <TextView
                          android:text="Paid"
                          android:gravity="center"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"/>

                      <TextView
                          android:gravity="center"
                          android:layout_marginTop="@dimen/margin2"
                          android:text="01-02-2019"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"/>


                  </LinearLayout>






              </LinearLayout>








          </android.support.v7.widget.CardView>


</LinearLayout>


        </LinearLayout>




    </LinearLayout>
</RelativeLayout>